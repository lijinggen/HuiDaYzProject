.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 150rpx;
}

.first {
  display: flex;
  flex-direction: column;
  width: 90%;
  border-radius: 12rpx;
  background: rgba(221, 221, 221, 0.397);
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 20rpx;
}

.head {
  display: flex;
  flex-direction: row;
  width: 90%;
  height: 80rpx;
  padding: 20rpx;
  margin: 0 auto;
  border-radius: 12rpx;

  background: rgba(221, 221, 221, 0.397);
}

.head_right {
  width: 80%;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.head_right text {
  font-size: 20rpx;
  line-height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.head image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 12rpx;
}

.title {
  margin-top: 25rpx;
}

.title text {
  font-weight: bold;
}

.price {
  margin-top: 20rpx;
}

.price text {
  color: red;
  font-size: 35rpx;
}

.introduce {
  margin-top: 15rpx;
}

.introduce text {
  font-size: 26rpx;
}

.image {
  margin: 0 auto;
  margin-top: 20rpx;
}

.add-wrap {
  position: fixed;
  bottom: 20px;
}

.contact_container {
  display: flex;
  flex-direction: column;
  width: 90%;
  border-radius: 12rpx;
  background: rgba(221, 221, 221, 0.397);
  margin: 0 auto;
  margin-top: 30rpx;
  padding: 20rpx;
}

.contact_container text {
  font-size: 26rpx;
}

.answer {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
}

.answer input {
  width: 72%;
  padding-left: 12rpx;
  border-radius: 12rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgb(255, 255, 255);
  font-size: 26rpx;
}

.answer button {
  width: 20%;
  height: 70rpx;
  right: 0rpx;
}

.comment_container {
  display: flex;
  flex-direction: column;
  width: 90%;
  border-radius: 12rpx;
  background: rgba(221, 221, 221, 0.397);
  margin: 0 auto;
  margin-top: 30rpx;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

.comment_container_text {
  font-size: 36rpx;
  font-weight: bold;
  margin: 0 auto;
}

.comment_container_head {
  display: flex;
  margin-top: 15rpx;
  flex-direction: column;
}

.comment_container_head_item {
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #fff;
}

.comment_container_head_item text {
  font-size: 30rpx;
  font-weight: normal;
}

.comment_container_head_item_foot {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 50rpx;
  line-height: 50rpx;
}

.comment_container_head_item_foot text {
  font-size: 26rpx;
  color: gray;
}

.comment_container_middle {
  display: flex;
  flex-direction: column;
}

.comment_container_middle image {
  margin: 0 auto;
  width: 200rpx;
  height: 200rpx;
}

.comment_container_middle text {
  font-size: 27rpx;
  color: gray;
}
