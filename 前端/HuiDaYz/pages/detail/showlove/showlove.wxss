.container {
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx;
}

.first {
  display: flex;
  flex-direction: column;
  width: 90%;
  border-radius: 12rpx;
  background: rgba(221, 221, 221, 0.397);
  margin: 0 auto;
  margin-top: 30rpx;
  padding: 20rpx;
}

.head {
  display: flex;
  flex-direction: row;
  padding-bottom: 10rpx;
}

.head image {
  width: 60rpx;
  height: 60rpx;
}

.head text {
  margin-left: 20rpx;
  line-height: 60rpx;
}

.middle {
  padding-top: 12rpx;
  padding-bottom: 20rpx;
}

.middle text {
  font-size: 26rpx;
  font-weight: bold;
  text-overflow: ellipsis;
  word-wrap: break-word;
}

.foot {
  display: flex;
  flex-direction: column;
}

.foot text {
  text-overflow: ellipsis;
  word-wrap: break-word;
  font-size: 24rpx;
}

.foot image {
  margin: 0 auto;
  margin-top: 20rpx;
  height: 250rpx;
}

.second {
  display: flex;
  flex-direction: column;
  width: 90%;
  border-radius: 12rpx;
  background: rgba(221, 221, 221, 0.397);
  margin: 0 auto;
  margin-top: 30rpx;
  padding: 20rpx;
}

.comment_container {
  display: flex;
  flex-direction: column;
  width: 90%;
  border-radius: 12rpx;
  background: rgba(221, 221, 221, 0.397);
  margin: 0 auto;
  margin-top: 30rpx;
  padding: 20rpx;
  padding-bottom: 40rpx;
}

.comment_container_text {
  font-size: 36rpx;
  font-weight: bold;
  margin: 0 auto;
}

.comment_container_head {
  display: flex;
  margin-top: 15rpx;
  flex-direction: column;
}

.comment_container_head_item {
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #fff;
}

.comment_container_head_item text {
  font-size: 30rpx;
  font-weight: normal;
}

.comment_container_head_item_foot {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 50rpx;
  line-height: 50rpx;
}

.comment_container_head_item_foot text {
  font-size: 26rpx;
  color: gray;
}

.comment_container_middle {
  display: flex;
  flex-direction: column;
}

.comment_container_middle image {
  margin: 0 auto;
  width: 200rpx;
  height: 200rpx;
}

.comment_container_middle text {
  font-size: 27rpx;
  color: gray;
}

.modals {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.modals-cancel {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.bottom-dialog-body {
  position: fixed;
  z-index: 10001;
  bottom: 0rpx;
  width: 100%;
  padding: 20rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.904);
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bottom-dialog-body input {
  width: 65%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid rgba(128, 128, 128, 0.226);
  padding-left: 12rpx;
  border-radius: 12rpx;
}

.bottom-dialog-body button {
  width: 30%;
  height: 80rpx;
  right: 0rpx;
}
