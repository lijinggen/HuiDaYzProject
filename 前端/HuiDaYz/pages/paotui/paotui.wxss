.add-wrap {
  position: fixed;
  bottom: 20px;
  right: 20px;
  display: flex;
  width: 25px;
  height: 25px;
  background: rgba(206, 206, 206, 0.3);
  border-radius: 30rpx;
  padding: 10px;
  justify-content: center;
}

.add-wrap image {
  width: 25px;
  height: 25px;
}

.paotuiItem {
  display: flex;
  flex-direction: row;
  background: rgb(248, 248, 248);
  min-height: 200rpx;
  width: 90%;
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 6rpx;
  padding: 20rpx;
}

.paotuiItem_left {
  width: 80%;
  display: flex;
  flex-direction: column;
}

.paotuiItem_head {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  width: 100%;
}

.paotuiItem_head image {
  width: 60rpx;
  height: 60rpx;
}

.paotuiItem_head text {
  color: gray;
  font-size: 27rpx;
  margin-left: 15rpx;
  margin-top: auto;
}

.paotuiItem_right {
  display: flex;
  flex-direction: column;
  width: 20%;
  height: 100%;

}

.paotuiItem_right_price{
  color: red;
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.paotuiItem_right_btn {
  display: flex;
  flex-direction: column;
  border-radius: 12rpx;
  align-items: center;
  justify-content: center;
  background: rgb(255, 255, 255);
    width: 100%;
  height: 180rpx;
}

.paotuiItem_right_btn image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.paotuiItem_right_btn text {
  font-size: 25rpx;
  font-weight: normal;
  line-height: 50rpx;
}

.paotuiItem_middle {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.paotuiItem_middle text {
  font-size: 25rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 35rpx;
}

.paotuiItem_foot {

}

.paotuiItem_foot text {
  font-size: 22rpx;
  color: gray;
}
