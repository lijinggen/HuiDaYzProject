.container {
  display: flex;
  flex-direction: column;
}

.imageRow {
  display: flex;
  flex-direction: row;
  width: 100%;
  padding: 10rpx;
  background: #fff;
}

.imageRow_item {
  width: 160rpx;
  height: 160rpx;
  align-items: center;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  border: 1rpx solid rgba(235, 235, 235, 0.411);
  border-radius: 12rpx;
  justify-content: center;
}

.imageRow_image {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
  border: 1rpx solid rgba(235, 235, 235, 0.411);
}

.imageRow_image image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
}

.imageRow_item image {
  width: 80rpx;
  height: 80rpx;
}

.imageRow_item text {
  font-size: 22rpx;
  color: gray;
}

.title_row {
  width: 90%;
  display: flex;
  flex-direction: row;
  background: #fff;
  margin: 0 auto;
  margin-top: 20rpx;
  height: 65rpx;
  line-height: 65rpx;
  border-bottom: 1rpx solid rgba(235, 235, 235, 0.822);
}

.title_row input {
  width: 100%;
  font-size: 25rpx;
  font-stretch: expanded;
}

.introduce_row {
  width: 90%;
  display: flex;
  flex-direction: row;
  background: #fff;
  margin: 0 auto;
  margin-top: 20rpx;
  line-height: 65rpx;
  height: 200rpx;
}

.introduce_row textarea {
  width: 100%;
  font-size: 25rpx;
  font-stretch: expanded;
  height: 200rpx;
}

.location_row {
  width: 90%;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  align-items: center;
}

.location_row image {
  height: 60rpx;
  width: 60rpx;
}

.location_row_right {
  border-left: 1rpx solid rgba(235, 235, 235, 0.822);
  display: flex;
  flex-direction: column;
  width: 80%;
}

.location_row_right text {
  margin-left: 20rpx;
  font-size: 25rpx;
  line-height: 60rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.location_row_right input {
  margin-left: 20rpx;
  height: 60rpx;
  width: 100%;
  font-size: 25rpx;
  line-height: 60rpx;
}

.bottom {
  height: 1rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  width: 80%;
  border-bottom: 3px solid rgb(196, 192, 192);
}

.choice_row {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  width: 90%;
  margin: 0 auto;
}

.choice_row_item {
  width: 50%;
  display: flex;
  height: 80rpx;
  align-items: center;
  line-height: 80rpx;
  font-size: 25rpx;
  justify-content: center;
}

.isolate {
  margin-top: 10rpx;
  width: 100%;
  height: 20rpx;
  background: rgba(221, 221, 221, 0.397);
}

.contact {
  width: 90%;
  display: flex;
  flex-direction: row;
  background: #fff;
  margin: 0 auto;
  margin-top: 20rpx;
  height: 65rpx;
  line-height: 65rpx;
  border-bottom: 1rpx solid rgba(235, 235, 235, 0.822);
}

.contact input {
  width: 100%;
  font-size: 25rpx;
  font-stretch: expanded;
}

.wechat {
  width: 90%;
  display: flex;
  flex-direction: row;
  background: #fff;
  margin: 0 auto;
  margin-top: 20rpx;
  height: 65rpx;
  line-height: 65rpx;
  border-bottom: 1rpx solid rgba(235, 235, 235, 0.822);
}

.wechat input {
  width: 100%;
  font-size: 25rpx;
  font-stretch: expanded;
}
.price_row{
  display: flex;
  flex-direction: row;
  width: 90%;
  background: #fff;
  margin: 0 auto;
  margin-top: 20rpx;
  height: 65rpx;
  line-height: 65rpx;
}
.price_row image{
  height: 65rpx;
  width: 65rpx;
  padding-right: 12rpx;
  border-right: 1rpx solid rgba(235, 235, 235, 0.822);
}
.price_row input{
  height: 65rpx;
  font-size: 25rpx;
  padding-left: 18rpx;
}
.submit_btn {
  position: fixed;
  bottom: 20rpx;
  margin: auto;
  left: 0;
  right: 0;
}
