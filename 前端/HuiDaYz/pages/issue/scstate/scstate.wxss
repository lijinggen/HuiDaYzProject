.cotainer {
  display: flex;
  flex-direction: column;
}

.container textarea {
  width: 90%;
  height: 200rpx;
  margin: 0 auto;
  margin-top: 40rpx;
  font-size: 27rpx;
}

.image_group {
  display: flex;
  flex-direction: row;
}

.select {
  background: rgb(236, 236, 236);
  width: 220rpx;
  height: 220rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.select image {
  width: 55rpx;
  height: 55rpx;
  vertical-align: middle;
}

.image_group {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}

.image_group_list {
  width: 220rpx;
  height: 220rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.image_group_list image {
  width: 220rpx;
  height: 220rpx;
}

.issue_btn{
  position: fixed;
  bottom: 20rpx;
  margin: auto;
  left: 0;
  right: 0;
}