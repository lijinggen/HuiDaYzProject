.container{
  display: flex;
  flex-direction: column;
}
.contact_container {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  width: 90%;
  border-radius: 12rpx;
  background: rgba(221, 221, 221, 0.397);
  margin: 0 auto;
  margin-top: 30rpx;
  padding: 20rpx;
}

.contact_container_wechat {
  display: flex;
  flex-direction: row;
  padding: 5rpx;
  align-items: center;
}

.contact_container_wechat image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 10rpx;
}

.contact_container_wechat input {
  border-left: 1rpx solid rgb(255, 255, 255);
  line-height: 60rpx;
  height: 60rpx;
  padding-left: 10rpx;
}

.contact_container_price {
