.container button {
  position: fixed;
  bottom: 50rpx;
  background: rgba(221, 221, 221, 0.397);
  margin: 0 auto;
  left: 0;
  right: 0;
}

.content_container{
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  background: rgba(221, 221, 221, 0.397);
  border-radius: 12rpx;
  width: 90%;
  margin: 0 auto;
}

.content_head{
  height: 70rpx;

  display: flex;
  flex-direction: row;
}

.content_head text{
  line-height: 70rpx;
  font-weight: bold;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.content_head image{
  width: 70rpx;
  height: 70rpx;
}

.content_content{
  background: white;
  margin-top: 10rpx;
}
.content_content textarea{
  font-size: 24rpx;
  padding:10rpx
}